// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") 
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Student{
  id String   @default(cuid())   @id
  firstName  String
  lastName String
  birthDate String? 
  enrollmentYear Int?

  parent           Parent?        @relation(fields: [parentId], references: [id])
  parentId         String?

  class           Class?        @relation(fields: [classId], references: [id])
  classId         String?

  classTeacher           Staff?        @relation(fields: [classTeacherId], references: [id])
  classTeacherId       String?

  scores           Score[]
}


model Score {
  id String   @default(cuid())   @id
  score Int
  quarter Int
  subjectName String
  students Student[]
}

model Staff {
  id String   @default(cuid())   @id
  firstName String
  lastName String
  position String?
  birthDate  String?
  isClassTeacher Boolean @default(false)
  students      Student[]
}


model Class {
  id String   @default(cuid())   @id
  name String
  capacity Int?
  students      Student[]
}

model Parent {
  id String   @default(cuid())   @id
  firstName String
  lastName String
  role String
  phoneNumber String
  birthDate  String?
  childrens Student[]
}
